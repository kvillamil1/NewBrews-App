<!--XML layout for Types of Beer page-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kat.finalproject_newbrews.TypesofBeer"
    android:background="#ff000000">

    <!--Layout for Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/logo_title"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/logo"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@drawable/typebutton"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="top" />
    </LinearLayout>

    <!--Enables scrolling for buttons-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/tbLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <!--Layout for Navigation Buttons-->
    <LinearLayout
        android:id="@+id/fbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:background="@drawable/navbackfinal"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:id="@+id/button2"
            android:layout_marginRight="5dp"
            android:onClick="typebeerbackOnClick" />

        <Button
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:background="@drawable/navhomefinal"
            android:id="@+id/button"
            android:onClick="typebeerhomeOnClick"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:layout_marginLeft="10dp" />
    </LinearLayout>


</LinearLayout>

